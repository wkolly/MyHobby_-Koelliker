<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyHobby</title>
    <link rel="icon" type="image/x-icon" href="~/golficon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyHobby.styles.css" asp-append-version="true" />

</head>
<body>
    
    <div class="container">
        <main role="main" class="pb-3">
         <link rel="icon" type="image/x-icon" href="~/golficon.ico">

            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
<style>
    footer {
        text-align: center;
        padding: 3px;
        background-color: seagreen;
        color: black;
    }
</style>
<footer>
    <p>&copy; 2024 Golf Enthusiast. All rights reserved. | Built by Will Koelliker</p>
</footer>
</html>
